<h1 class="mb-3">Editing article</h1>
<%= render "form", article: @article %>
<div class="mt-3 d-flex gap-4">
  <%= link_to article_path(@article) do %>
    <div class="btn btn-primary btn-sm mb-3"><i class="fa-solid fa-eye"></i> Show article</div>
  <% end %>
  <%= link_to articles_path do %>
    <div class="btn btn-primary btn-sm mb-3"><i class="fa-solid fa-list"></i> Back to articles</div>
  <% end %>
</div>
